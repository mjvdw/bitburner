{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "/scripts/",
    "paths": {
      "*": ["node_modules/*", "src/types/*", "src/*"]
    }
  },
  "include": ["src/**/*"]
}
